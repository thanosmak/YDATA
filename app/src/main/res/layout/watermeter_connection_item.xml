<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:padding="12dp"
    android:layout_marginTop="5dp"
    android:background="@color/cardview_light_background">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:src="@drawable/ic_invert_colors_black_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/watermeterDeya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Meter Name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/watermeterAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: Ion. Kessarias 2"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/watermeterPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pin: 231231"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>